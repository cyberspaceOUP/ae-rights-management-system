<style type="text/css">
    .table-color a {
        color: #ee5941;
    }
</style>
<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            @*@T("Dashboard.NoContract")*@
            Assignment Contract Request Status @*- Draft and Issued Contract*@
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"> </a>

        </div>
    </div>
    <div class="portlet-body">
        <div class="table-responsive">
            <div ng-hide="!IssuedDraftAuthorContractDetailsList.length">
                <table class="table table-bordered table-striped">
                    <tr>
                        <th> Contract Code </th>
                        <th> Product Code </th>
                        <th> ISBN </th>
                        <th> Working Product </th>
                        <th> Author Name </th>
                        <th> Requested Date </th>
                        <th> Requested By </th>
                        <th> Division </th>
                        <th> Remarks </th>
                        @*<th> Last Date </th>*@
                    </tr>

                    <tr ng-repeat="IssuedDraftAC in IssuedDraftAuthorContractDetailsList">
                        <td class="table-color">
                            <a href="~/Contract/AuthorContract/view?Id={{IssuedDraftAC.Id}}" ng-if="IssuedDraftAC.Id != '0'"><span ng-bind="(IssuedDraftAC.Contract_Code)"></span></a>
                            <a href="~/Contract/AuthorContract/view?SeriesCode={{IssuedDraftAC.Contract_Code}}" ng-if="IssuedDraftAC.Id == '0'"><span ng-bind="(IssuedDraftAC.Contract_Code)"></span></a>
                        </td> @*data-toggle="modal" data-target="#myModalAuthor"*@
                        <td class="table-color"><a href="~/Product/ProductMaster/ProductDetailsView?Id={{IssuedDraftAC.ProductId}}"> <span ng-bind="(IssuedDraftAC.ProductCode)"></span>   </a></td>
                        <td> <span ng-bind="(IssuedDraftAC.ISBN)"></span>  </td>
                        <td>  <span ng-bind="(IssuedDraftAC.WorkingProduct)"></span> <span style="font-size:11px;">  <br /><span ng-bind="(IssuedDraftAC.WorkingSubProduct)"></span> </span></td>
                        <td>  <span ng-bind="(IssuedDraftAC.AuthorName)" ng-if="!(PendingAC.AuthorName=='No Royalty Account ')"></span>   </td>
                        <td> <span ng-bind="(IssuedDraftAC.EntryDate)"></span>    </td>
                        <td>  <span ng-bind="(IssuedDraftAC.ExecutiveName)"></span>   </td>
                        <td> <span ng-bind="(IssuedDraftAC.divisionName)"></span> </td>
                        <td> <span ng-bind="(IssuedDraftAC.Status)"></span> </td>
                      
                        @*<td>{{IssuedDraftAC.EntryDate}}</td>*@
                    </tr>
                </table>
                <div style="float:right;">
                    <a href="javascript:void(0);" ng-click="IssueDraftAuthorContract_submitForm();" ng-if="Issuedcontract" class="moreDash">Contract : View More</a>
                    <br />
                    <a href="javascript:void(0);" ng-click="IssuedDraftSeries_submitForm();" class="moreDash"
                       ng-if="Issuedseries">Series : View More</a>
                </div>
            </div>
            <div ng-hide="IssuedDraftAuthorContractDetailsList.length">No result found</div>
        </div>
    </div>
</div>


