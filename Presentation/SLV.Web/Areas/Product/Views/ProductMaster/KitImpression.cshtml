@{
    ViewBag.Title = "KitImpression";
    Layout = "~/Views/Shared/_LayoutDesignMaster.cshtml";
}

<script src="~/js/Product/KitImpression.js"></script>
<link href="~/Content/app.css" rel="stylesheet" />
<link href="~/Content/datepicker3.min.css" rel="stylesheet" />
<script src="~/js/common/TopSearch.js"></script>
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker3.min.css" />


<script type="text/javascript">
    $(document).ready(function () {
        var date = new Date();
        var TodayDate = new Date();
        date.setDate(date.getYear - 100);

        $('.txtImpressionDate')
            .datepicker({
                format: "dd/mm/yyyy",
                startDate: date,
                showButtonPanel: true,
                autoclose: true,
                endDate: TodayDate
            })
    });
</script>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12"> 
            <div class="main-title">
                <h1>
                    Kit Impression
                    @Html.Partial("pagedate")
                </h1>
            </div>
        </div>

        <form name="userForm" class=" form-horizontal" ng-submit="kitIsbnEntryForm()" ng-cloak novalidate>
            <div class="col-md-12">
                <div class="portlet-body form">
                    <div class="form-body">
                        <div class=" row">


                            <div class="col-md-12">
                                <div class="portlet-body form">

                                    <div class="form-body">
                                        @Html.Partial("~/Areas/Product/Views/Shared/_KitISBNList.cshtml")
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <div class="portlet-body form">

                                    <div class="form-body">
                                        @Html.Partial("~/Areas/Product/Views/Shared/_KitIsbnProductList.cshtml")
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
                

            <div class="col-md-12">
                <div class="portlet box green">
                    <div class="portlet-title">
                        <div class="caption">
                            Product Impression Entry
                        </div>
                        <div class="tools">
                            <a href="javascript:;" class="collapse"> </a>
                        </div>
                    </div>
                    <div class="portlet-body flip-scroll">
                        <div class="row">
                            <div class="col-md-12">
                                &nbsp;
                            </div>
                        </div>
                        <table  class="table table-bordered table-striped table-condensed flip-content">
                            <thead class="flip-content">
                                <tr>
                                  
                                    <th>SNo</th>
                                    <th>Impression Date</th>
                                    <th>Quantity Printed</th>
                                

                                </tr>
                            </thead>

                            <tbody>
                                <tr ng-repeat="obj in ImpressionList" class="tooltipclass">
                                    <td>{{$index + 1}}</td>
                                  
                                    <td>
                                        {{(obj.ImpressionDateView)}}
                                      
                                    </td>
                                    <td>{{obj.QunatityPrintedView}}</td>
                                   
                                </tr>
                            </tbody>


                            <tbody>
                                <tr>
                                    <td>
                                        {{ImpressionList.length + 1}}
                                        
                                    </td>
                                    <td class="col-md-6 form-group">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="col-md-12">
                                                    <div class="form-group" ng-class="{ 'has-error': ( submitted ||userForm.txtImpressionDate.$dirty) && userForm.txtImpressionDate.$invalid } ">
                                                        <div class="input-group input-append date col-md-10 txtImpressionDate">
                                                            <input type="text" id="txtImpressionDate" name="txtImpressionDate" onchange="angular.element(document.getElementById('angularid')).scope().SetEffectiveDate(this);" class="form-control" ng-model="txtImpressionDate" placeholder="Impression Date" required>
                                                            <span class="input-group-addon add-on"><span class="glyphicon glyphicon-calendar"></span></span>
                                                        </div>
                                                        <div class="help-block">
                                                            <p ng-show="userForm.txtImpressionDate.$error.required && (userForm.txtImpressionDate.$dirty || submitted)" class="help-block red">Please enter Impression Date</p>
                                                        </div>
                                                    </div>
                                                </div>

                                                

                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="row form-group">
                                            <div class="col-md-12">
                                                <div class="col-md-12">
                                                    <div class="form-group" ng-class="{ 'has-error': ( submitted ||userForm.txtImpressionQty.$dirty) && userForm.txtImpressionQty.$invalid } ">
                                                        <input type="number" name="txtImpressionQty" id="txtImpressionQty" min="1" class="form-control" ng-model="ImpressionQty" placeholder="Impression Quantity" required>
                                                        <div class="help-block">
                                                            <p ng-show="userForm.txtImpressionQty.$error.required && (userForm.txtImpressionQty.$dirty || submitted)" class="help-block red">Please enter Impression Quantity</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    
                                </tr>
                            </tbody>

                            
                        </table>
                    </div>
                </div>
            </div>

                <div class="col-md-12">
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <input type="hidden" id="hid_KitIsbnId" name="hid_KitIsbnId" value="@TempData["KitIsbnId"]" />

                                <button type="submit" class="btn green" @*ng-click="kitIsbnEntryForm();"*@ id="btnSubmit">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
</form>

        

    </div>
</div>
