@{
    ViewBag.Title = "KitIsbnView";
    Layout = "~/Views/Shared/_LayoutDesignMaster.cshtml";
}

<script src="~/js/Product/KitISBNView.js"></script>
<script src="~/js/master/common.master.js"></script>
<link href="~/Content/app.css" rel="stylesheet" />
<script src="~/js/common/TopSearch.js"></script>

<input type="hidden" id="KitId" value="@ViewBag.KitId" />

<div class="container-fluid">
    <div class="row panel">

        <div class="col-md-12">
            <div class="main-title">
                <h1>
                    Kit View
                    @Html.Partial("pagedate")
                </h1>
            </div>
        </div>

        <div class="col-md-12 col-xs-12 col-sm-12">
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        Kit Master
                    </div>
                    <div class="tools">
                        <a href="javascript:void(0);" class="collapse" data-original-title="" title=""> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-6 col-xs-6 col-sm-6">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label class="control-label col-md-5 col-xs-6 col-sm-6">Division  </label>
                                            <div class="col-md-7 col-xs-6 col-sm-6">
                                                <label class="control-label"><span ng-bind="KitIsbnDetails[0].DivisionName"></span></label>
                                            </div>
                                        </div>
                                        <div class="portlet-body clearfix">&nbsp;</div>
                                        <div class="col-md-12">
                                            <label class="control-label col-md-5 col-xs-6 col-sm-6">Sub-Division </label>
                                            <div class="col-md-7 col-xs-6 col-sm-6">
                                                <label class="control-label"><span ng-bind="KitIsbnDetails[0].SubDivisionName"></span></label>
                                            </div>
                                        </div>
                                        <div class="portlet-body clearfix">&nbsp;</div>
                                        <div class="col-md-12">
                                            <label class="control-label col-md-5 col-xs-6 col-sm-6">Product Category </label>
                                            <div class="col-md-7 col-xs-6 col-sm-6">
                                                <label class="control-label"><span ng-bind="KitIsbnDetails[0].ProductCategoryName"></span></label>
                                            </div>
                                        </div>
                                        <div class="portlet-body clearfix">&nbsp;</div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-xs-6 col-sm-6">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label class="control-label col-md-5 col-xs-6 col-sm-6">Product Type  </label>
                                            <div class="col-md-7 col-xs-6 col-sm-6">
                                                <label class="control-label"><span ng-bind="KitIsbnDetails[0].ProductTypeName"></span></label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        Kit Details
                    </div>
                    <div class="tools">
                        <a href="javascript:void(0);" class="collapse" data-original-title="" title=""> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="form-body">
                        <div class="row">
                            <div class=" col-md-12">
                                <div class="col-md-6 col-xs-6 col-sm-6">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label class="control-label col-md-5 col-xs-6 col-sm-6">Kit ISBN  </label>
                                            <div class="col-md-7 col-xs-6 col-sm-6">
                                                <label class="control-label">
                                                    <span ng-bind="KitIsbnDetails[0].ISBN"></span>
                                                    &nbsp;(&nbsp;<span style="font-size:12px;"><i>ISBN-10:&nbsp;{{IsbnConverted}}</i></span>&nbsp;)
                                                </label>
                                            </div>
                                        </div>
                                        <div class="portlet-body clearfix">&nbsp;</div>
                                        <div class="col-md-12">
                                            <label class="control-label col-md-5 col-xs-6 col-sm-6">Working Product </label>
                                            <div class="col-md-7 col-xs-6 col-sm-6">
                                                <label class="control-label"><span ng-bind="KitIsbnDetails[0].WorkingProduct"></span></label>
                                            </div>
                                        </div>
                                        <div class="portlet-body clearfix">&nbsp;</div>
                                        <div class="col-md-12">
                                            <label class="control-label col-md-5 col-xs-6 col-sm-6">Working Sub-Product</label>
                                            <div class="col-md-7 col-xs-6 col-sm-6">                                                
                                                <label class="control-label"><span ng-bind="KitIsbnDetails[0].SubWorkingProduct"></span></label>
                                            </div>
                                        </div>
                                        <div class="portlet-body clearfix">&nbsp;</div>
                                        <div class="col-md-12">
                                            <label class="control-label col-md-5 col-xs-6 col-sm-6">Projected Price</label>
                                            <div class="col-md-7 col-xs-6 col-sm-6">
                                                <label class="control-label"><span ng-bind="KitIsbnDetails[0].ProjectedPrice"></span></label>
                                            </div>
                                        </div>
                                        <div class="portlet-body clearfix">&nbsp;</div>
                                        <div class="col-md-12">
                                            <label class="control-label col-md-5 col-xs-6 col-sm-6">Projected Currency</label>
                                            <div class="col-md-7 col-xs-6 col-sm-6">
                                                <label class="control-label"><span ng-bind="KitIsbnDetails[0].CurrencySymbol"></span></label>
                                            </div>
                                        </div>
                                        <div class="portlet-body clearfix">&nbsp;</div>

                                    </div>
                                </div>

                                <div class="col-md-6 col-xs-6 col-sm-6">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label class="control-label col-md-5 col-xs-6 col-sm-6">Linked ISBN(s)</label>
                                            <div class="col-md-7 col-xs-6 col-sm-6">
                                                <p ng-repeat="item in KitIsbnDetails[0].ProductISBN.split(',')">
                                                    <span ng-bind='item'></span>
                                                </p>
                                                @*<label class="control-label"><span ng-bind="KitIsbnDetails[0].ProductISBN"></span></label>*@
                                            </div>
                                        </div>
                                        <div class="portlet-body clearfix">&nbsp;</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

