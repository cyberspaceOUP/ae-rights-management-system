                                    <input type="text" name="ProductCode" class=" form-control" ng-model="ProductModel.ProductCode" @*ng-pattern="/^[0-9]{1,7}$/"*@ placeholder="Product Code" ng-disabled="true">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
