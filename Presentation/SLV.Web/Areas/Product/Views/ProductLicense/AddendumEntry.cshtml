                        <input type="hidden" value="@ViewBag.AddendumId" ng-model="ProductModel.AddendumId" ng-init="ProductModel.AddendumId = @ViewBag.AddendumId" id="hid_AddendumId" name="hid_AddendumId">
                    </div>
