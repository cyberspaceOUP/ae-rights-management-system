@using ACS.Services.Master
@{
    ViewBag.Title = "PublishingCompanyList";
    Layout = "~/Views/Shared/_LayoutDesignMaster.cshtml";
}

<script src="~/js/list/List.Publishing.js"></script>
<script src="~/js/master/common.master.js"></script>
<script src="~/js/common/TopSearch.js"></script>

@section onInit
{
    angular.element(document.getElementById('angularid')).scope().getAllPublishingCompany();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="main-title">
                <h1>
                    Proprietor Company List
                    @Html.Partial("pagedate")
                </h1>
            </div>
        </div>
        <div class="col-md-12">
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        Proprietor Company List
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body flip-scroll">
                    <div class="row">
                        <div class="col-md-12">
                            &nbsp;
                        </div>
                    </div>

                    <table datatable="ng" class="table table-bordered table-striped table-condensed flip-content">
                        <thead class="flip-content">
                            <tr>
                                <th>Company Name &nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                                <th>Contact Person &nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                                <th>Country &nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                                <th>State &nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                                <th>City &nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                                <th>Phone &nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                                <th>Mobile &nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                                <th>Email &nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                                <th>Website &nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="pcomp in PublishingCompanyList">

                                <td><span ng-bind="pcomp.CompanyName"></span></td>
                                <td><span ng-bind="pcomp.ContactPerson"></span></td>
                                <td><span ng-bind="pcomp.CountryName"></span></td>
                                <td><span ng-bind="pcomp.StateName"></span></td>
                                <td><span ng-bind="pcomp.CityName"></span></td>
                                <td><span ng-bind="pcomp.Phone"></span></td>
                                <td><span ng-bind="pcomp.Mobile"></span></td>
                                <td><span ng-bind="pcomp.Email"></span></td>
                                <td><span ng-bind="pcomp.Website"></span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


        <div class="clearfix"></div>
        <div class="col-md-12" id="div_btnExcel">
            <div class="form-group text-center">
                <form name="userForm" class=" form-horizontal" ng-show="PublishingCompanyList.length != 0" ng-submit="PublishingCompanyListExcel()">
                    <button type="submit" class="btn green" id="btnSubmit">Generate Excel</button>
                </form>
        </div>
        </div>

    </div>
</div>