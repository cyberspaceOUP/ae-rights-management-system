@using ACS.Services.Master
@{
    ViewBag.Title = "PubCenterList";
    Layout = "~/Views/Shared/_LayoutDesignMaster.cshtml";
}

<script src="~/js/list/List.PubCenter.js"></script>
<script src="~/js/master/common.master.js"></script>
<script src="~/js/common/TopSearch.js"></script>

@section onInit
{
    angular.element(document.getElementById('angularid')).scope().getAllPubCenterList();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="main-title">
                <h1>
                    Publishing Centre List
                    @Html.Partial("pagedate")
                </h1>
            </div>
        </div>
        <div class="col-md-12">
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        Publishing Centre List
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body flip-scroll">
                    <div class="row">
                        <div class="col-md-12">
                            &nbsp;
                        </div>
                    </div>

                    <table datatable="ng" class="table table-bordered table-striped table-condensed flip-content">
                        <thead class="flip-content">
                            <tr>
                                <th>Publishing Company Name &nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                                <th>Center Name &nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                                <th>Country &nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                                <th>State &nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                                <th>City &nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                                <th>Phone &nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                                <th>Mobile &nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                                <th>Fax &nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                                <th>Email &nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="PubCenter in PubCenterData">

                                <td><span ng-bind="PubCenter.PublishingCompanyName"></span></td>
                                <td><span ng-bind="PubCenter.CenterName"></span></td>
                                <td><span ng-bind="PubCenter.CountryName"></span></td>
                                <td><span ng-bind="PubCenter.StateName"></span></td>
                                <td><span ng-bind="PubCenter.CityName"></span></td>
                                <td><span ng-bind="PubCenter.Phone"></span></td>
                                <td><span ng-bind="PubCenter.Mobile"></span></td>
                                <td><span ng-bind="PubCenter.Fax"></span></td>
                                <td><span ng-bind="PubCenter.Email"></span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


        <div class="clearfix"></div>
        <div class="col-md-12" id="div_btnExcel">
            <div class="form-group text-center">
                <form name="userForm" class=" form-horizontal" ng-show="PubCenterData.length != 0" ng-submit="PubCenterListExcel()">
                    <button type="submit" class="btn green" id="btnSubmit">Generate Excel</button>
                </form>
            </div>
        </div>

    </div>
</div>