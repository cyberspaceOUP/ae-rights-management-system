
@using ACS.Services.Master
@{
   
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutDesignMaster.cshtml";
}



<script src="~/js/ChangePassword/changepassword.js"></script>
<script src="~/js/master/common.master.js"></script>
@*<input type="hidden" id="hdnContactId" value="@Model.Id" />*@


<input type="hidden" id="hdnContactId" value="@Session["UserId"]" />

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="main-title">
                <h1>
                    Change Password
                    @Html.Partial("pagedate")
                </h1>
            </div>
        </div>
        <div class="col-md-12">
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                            Change Password
                    </div>
                </div>


                <div class="portlet-body">

                    <form name="passwordForm" class="form-horizontal" novalidate ng-submit="submitForm()">


                        <div class="form-body">
                          
                            <div class="row">
                                <div class="col-md-6 myerror" style="padding:26px; text-align:right" id="msgId" >{{msg}}</div>
                            </div>

                            <div class="form-group" ng-class="{ 'has-error' : passwordForm.oldpassword.$invalid && (passwordForm.oldpassword.$dirty || submitted)}">
                                <label class="control-label col-md-3" for="inputWarning">Old Password</label>
                                <div class="col-md-4">

                                    <input type="Password" name="oldpassword" class="form-control" ng-model="oldpassword" placeholder="Old Password" ng-required="true">

                                    <div class="help-block">
                                        <p ng-show="passwordForm.oldpassword.$error.required && (passwordForm.oldpassword.$dirty || submitted)">Old Password Required</p>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group" ng-class="{ 'has-error' : passwordForm.newpassword.$invalid && (passwordForm.newpassword.$dirty || submitted)}">
                                <label class="control-label col-md-3" for="inputWarning">New Password</label>
                                <div class="col-md-4">
                                    <input type="Password" name="newpassword" class="form-control" ng-model="newpassword" placeholder="New Password" ng-required="true">
                                    <div class="help-block">
                                        <p ng-show="passwordForm.newpassword.$error.required && (passwordForm.newpassword.$dirty || submitted)">New Password Required</p>
                                        @*<p ng-show="passwordForm.newpassword.$error.pattern && (passwordForm.newpassword.$dirty || submitted)">must contain alphanumeric character</p>*@

                                    </div>
                                </div>
                            </div>
                            <div class="form-group" ng-class="{ 'has-error' : passwordForm.confirmpassword.$invalid && (passwordForm.confirmpassword.$dirty || submitted)}">
                                <label class="control-label col-md-3" for="inputWarning">Confirm Password</label>
                                <div class="col-md-4">
                                    <input type="Password" name="confirmpassword" class="form-control" ng-model="confirmpassword" placeholder="Confirm Password" ng-required="true" ng-compare="newpassword">
                                    <div class="help-block">
                                        <p ng-show="passwordForm.confirmpassword.$error.required && (passwordForm.confirmpassword.$dirty || submitted)" class="help-block">Confirm Password Required</p>
                                        <p ng-show="passwordForm.confirmpassword.$error.compare  && (passwordForm.confirmpassword.$dirty || submitted)" class="help-block">Confirm Password Required</p>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <button type="submit" class="btn green" id="btnSubmit">Submit</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

