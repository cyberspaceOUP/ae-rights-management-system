<div class=" row">
    <div class="col-md-12">
        <label class="control-label col-md-5">@*@T("Common.City.Label")*@ PIN Code&nbsp;<span class="red" ng-show="OthersNot"></span></label>
        <div class="col-md-7">
            <div class="form-group" ng-class="{ 'has-error': (submitted ||userForm.Affpincode.$dirty) && userForm.Affpincode.$invalid } ">
                <input type="text" name="Affpincode" class="form-control" id="Affpincode" maxlength="15" ng-model="Affpincode" placeholder="Pincode" @*ng-pattern="/^(\d{3,10})$/"*@ ng-pattern="/^([a-zA-Z0-9 ]){3,15}$/" />
                <div class="help-block" ng-show="OthersNot">
                    <p ng-show="userForm.Affpincode.$error.required && (userForm.Affpincode.$dirty || submitted)">Please enter PIN Code</p>
                    <p ng-show="userForm.Affpincode.$error.pattern" class="help-block red">Please enter valid PIN Code</p>


                </div>
            </div>
        </div>
    </div>
</div>